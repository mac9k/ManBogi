<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_activity_main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/fl_activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/mon"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/mon" />

                <ImageButton
                    android:id="@+id/tue"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tue" />

                <ImageButton
                    android:id="@+id/wed"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/wed" />

                <ImageButton
                    android:id="@+id/thu"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/thu" />

                <ImageButton
                    android:id="@+id/fri"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/fri" />

                <ImageButton
                    android:id="@+id/sat"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/sat" />

                <ImageButton
                    android:id="@+id/sun"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@drawable/sun" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/naver"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/_naver" />

                    <ImageButton
                        android:id="@+id/daum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/_daum" />
                    
                    <ImageButton
                        android:id="@+id/nate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/_nate" />

                    <ImageButton
                        android:id="@+id/olleh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/_olleh" />
                </LinearLayout>
                
                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageButton
                        android:id="@+id/kakao"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/_kakao" />

                    <ImageButton
                        android:id="@+id/tstore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/_tstore" />
                    
                    <ImageButton
                        android:id="@+id/money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/_money" />

                    <ImageButton
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:layout_weight="1"
                        android:background="@drawable/_question" />
                </LinearLayout>
                
                
                
            </LinearLayout>
            
            <LinearLayout
        android:id="@+id/toon"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
        </LinearLayout>
        
        
    </FrameLayout>

    <ListView
        android:id="@+id/lv_activity_main_nav_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#EDEDED"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>